btnNav.addEventListener('click', function(){
    primaryNav.classList.toggle('hidden');
    nav.classList.toggle('active-nav');
    if (hamburgerNav.src.match("../assets/menu-symbol-open-2.svg")) {
                hamburgerNav.src = "../assets/menu-symbol-close.svg";

            }
            else {
                hamburgerNav.src = "../assets/menu-symbol-open-2.svg";
    
            };

    
    
});

//Observer container-one 
const option = {
    root: null,
    threshold: 1.0,
    rootMargin: "1px"
};

const observer = new IntersectionObserver(function (entries, observer) {
    entries.forEach(entries => {
        if(!entries.isIntersecting){ //not is intersecting
            return
        }
        entries.target.classList.add('fade');
    //    console.log(entries.target); //target element
    });
}, option);



// observer.observe(containerStarterOne);
// observer.observe(containerStarterTwo);
observer.observe(containerOne)
observer.observe(containerTwo)
observer.observe(containerThree)


</script>

